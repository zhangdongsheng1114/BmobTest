<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="更改昵称:" />

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nickname"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:hint="输入昵称"
        android:padding="20dp" />

    <TextView
        android:id="@+id/tv_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_nickname"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:text="上传头像:" />

    <ImageView
        android:id="@+id/iv_headicon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/et_nickname"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/tv_in"
        android:src="@drawable/ic_my_default_head" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_below="@+id/iv_headicon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_login_button"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_unsign"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_below="@+id/btn_submit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/selector_unsign_button"
        android:text="退出当前帐号"
        android:textColor="#ffffff"
        android:textSize="14sp" />
</RelativeLayout>